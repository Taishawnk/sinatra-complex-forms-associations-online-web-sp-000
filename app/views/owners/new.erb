<h1>Create a new Owner</h1>

<form action="/owners" method="POST">
  <label>Name:</label>

  

  <input type="text" name="owner[name]">

  <h3>Existing Pets</h3>
  <% @pets.each do |pet| %>
  <input type="checkbox" name="owner[pet_ids][]" id="<%= pet.id %>" value="<%= pet.id %>"><%= pet.name %><br>
     <%#name "owner[pet_ids][]" allows the array of pet ids to be strored inside the owners hash the %>
  <%end%>
  <br>
  <h3>New pet </h3>
  <label>Name:</label>
   <input type="text" name="pet[name]">
   <br><br>
  <input type="submit" value="Create Owner">
</form>

